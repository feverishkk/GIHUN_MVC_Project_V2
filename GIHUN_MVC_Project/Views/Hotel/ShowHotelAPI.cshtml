@model IEnumerable<GIHUN_MVC_Project.Models.Hotels.SaveHotelSummary>

@{
    ViewData["Title"] = "ShowHotelAPI";
}

<h1>ShowHotelAPI</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Latitude)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Longitude)
                </td>
                <td>
                    <form asp-action="Upsert" asp-controller="Hotel" asp-route-id="@item.Id" method="get">
                        <button type="submit" class="btn btn-sm btn-warning"> Edit </button>
                    </form>

                    <form asp-action ="Details" asp-controller="Hotel" asp-route-id="@item.Id" method="get">
                        <button type="submit" class="btn btn-sm btn-primary"> Details </button>
                    </form>

                    <form asp-action="Delete" asp-controller="Hotel" asp-route-id="@item.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger"> Delete </button>
                    </form>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
